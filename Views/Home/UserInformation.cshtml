                                                <h6 class="text-muted f-w-400">@Model.view_User.Where(x => x.UserEmpID.Equals(@userEmpID)).Select(x => x.PlantName).SingleOrDefault()</h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600"></p>
                                                @* <h6 class="text-muted f-w-400">@Model.tbUser.Select(x => x.Lineconcern)</h6> *@
