@*Modal Edit*@
<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
            <form method="post" asp-action="PasswordEdit" asp-controller="Home" id="passwordForm">
            <div class="modal-content">
                <div class="modal-header" style="background-color:blue">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Password Change</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  
     
                    <div class="mb-3">
                        <label  class="col-form-label">New Password:</label>
                            <input type="password" class="form-control" id="ModalUserPassword" Name="UserPassword" maxlength="255"  required>
                    </div>
                    <div class="mb-3">
                            <label class="col-form-label">Confirm Password:</label>
                            <input type="password" class="form-control" id="ModalConfirmUserPassword" Name="ConfirmUserPassword" maxlength="255"  required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="Submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


    <script>


    document.getElementById('passwordForm').addEventListener('submit', function(event) {
        var password = document.getElementById('ModalUserPassword').value;
        var confirmPassword = document.getElementById('ModalConfirmUserPassword').value;

        if (password !== confirmPassword) {
            alert('Passwords do not match.');
            event.preventDefault(); // Prevent form submission
        }
    });

        </script>

