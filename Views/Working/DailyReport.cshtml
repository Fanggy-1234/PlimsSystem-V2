            {
                <button class="search-button" id="btnExportreport" type="submit" asp-action="DailyReportExport" value="export" name="submit">Export</button>
                 
            }
            else
            {
                <button type="button" class="search-button">Export2</button>
            }
        </div>
    </div>



</form>

