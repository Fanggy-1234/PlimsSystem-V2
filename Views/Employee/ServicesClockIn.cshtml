                            var newRow = $("<tr>");
                            newRow.append("<td>" + section.text() + "</td>");
                            newRow.append("<td>" + selectedService.text() + "</td>");
                            newRow.append("<td><a href='javascript:void(0);' onclick='RemoveRow(this)'>Remove</a></td>");
                            tableBody.append(newRow);
                            addedInSection = true;
                        }
                    }
                });
                if (!addedInSection) {
                    alert("The selected service is already added in all sections or sections are already added.");
                }
            } else if (selectedSection.val() !== "") {
                $("#tablecreate_id tbody tr").each(function () {
                    var existingSection = $(this).find("td:eq(0)").text().trim();
                    var existingService = $(this).find("td:eq(1)").text().trim();
                    if (existingSection === selectedSection.text().trim() && existingService === selectedService.text().trim()) {
