        var selectedSection = $("#SectionID option:selected");
        var tableBody = $("#tablecreate_id tbody");
        var serviceAlreadyExists = false;

        $("#SectionSelect").val(selectedSection.val());

        if (selectedService.val() !== "") {
            if (selectedSection.val() === "All") {
                var addedInSection = false;
                $("#SectionID option").each(function () {
                    var section = $(this);
                    if (section.val() !== "All" && section.val() !== "") {
                        var serviceExistsInSection = false;
                        $("#tablecreate_id tbody tr").each(function () {
                            var existingSection = $(this).find("td:eq(0)").text().trim();
                            var existingService = $(this).find("td:eq(1)").text().trim();
                            if (existingSection === section.text().trim() && existingService === selectedService.text().trim()) {
                                serviceExistsInSection = true;
                                return false;
                            }
                        });
