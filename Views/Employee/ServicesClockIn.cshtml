    function filterSectionByLine() {

        var SelectLineID = $("#LineID").val().toString();
        // var selectedLineID = $("#ModalLineName").val().toString();

        // Check if a product is selected
        if (SelectLineID !== "") {
            // Use AJAX to filter sections based on the selected Product ID
            $.ajax({
                type: "GET",
                url: "/Employee/FilterSectionByLine", // Update the URL to your controller action
                data: { LineID: SelectLineID },
                success: function (data) {
                    if (data.success === false) {
                        // Show an alert message if the response indicates failure
                        alert(data.message);

                    } else {

                        $("#SectionID").empty();
                        $("#SectionID").append("<option value='All'>All</option>");
           
                        data.forEach(function (section) {
                            $("#SectionID").append("<option value='" + section.sectionID + "'>" + section.sectionID + " :" + section.sectionName + "</option>");
                           
                        });
                    }
                },
