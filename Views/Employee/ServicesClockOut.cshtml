                    Employee ID
                </th>
                <th>
                    Employee Name
                </th>
                <th>
                    Line
                </th>
                <th>
                    Section
                </th>
                <th>
                    Service
                </th>
                <th>
                    Date
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                <th>
                    Clock-In
                </th>
                <th>
                    Clock-Out
                </th>
                <th>
                    Working Status
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.view_ServicesClocktime)
            {
                <tr>
                 @*    @Html.HiddenFor(modelItem => item.TransactionNo) *@
                    <td>
                        <input type="checkbox" id="@item.TransactionNo" value="@item.TransactionNo" class="checkthis" Name="EmployeeIDchk" />
                    </td>
                    @*<input id="@fruit.Value" type="checkbox" name="Fruit" value="@fruit.Value" checked="@fruit.Selected" />*@


                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID, new { @class = "EmployeeID", Name = "EmployeeIDlist", value = @item.EmployeeID, id = @item.EmployeeID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LineName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SectionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServicesName)
                    </td>
                    <td style="color:darkblue">
                        @Html.DisplayFor(modelItem => item.TransactionDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td style="color:darkblue">
                        @Html.DisplayFor(modelItem => item.ClockIn)
                    </td>
                    <td style="color:darkblue">
                        @Html.DisplayFor(modelItem => item.ClockOut)
                    </td>
                    <td >
                        @Html.DisplayFor(modelItem => item.WorkingStatus)
                    </td>


                    <td>
                        @if (string.IsNullOrEmpty(item.ClockOut))
                        {
                            <a href="#" id="btnEdit" data-id="@item.ID" data-section-id="@item.SectionID" data-service-id="@item.ServicesID">Edit</a>
                        }
                        else
                        {

                            @if (ViewBag.VBRoleServicesClockOut == "Full")
                            {
                                <a href="#" data-bs-toggle="modal" data-bs-target="#EditModal" id="btnEdit" data-id="@item.ID" data-section-id="@item.SectionID" data-service-id="@item.ServicesID" onclick="EditFn(@item.TransactionNo)">Edit</a>

                            }
                            else
                            {
                                <a href="#">Edit</a>

                            }
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
</form>
