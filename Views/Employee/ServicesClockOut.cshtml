<div class="row" style="height:10px"></div>
<form method="get" asp-controller="Employee" asp-action="ServicesClockOut">
    <div class="row" style="background-color: #fcfcfc; border-radius: 2px; padding: 10px;">

        <div class="col left" style="border: solid 1px #d5d5d5 ;position: relative; margin-left:2em;">
            <div class="row" style="height:10px">
            </div>

            @*Fillter Process*@
            <div class="row" style="padding-right:2em ">
                <div class="col-3 label">
                    <label> Line Name:</label>
                </div>
                <div class="col">
                    <select class="selectfillter form-control" list="LineName" name="LineName" id="LineName" style="width:100%">
                        <option value="" default selected></option>
                        @foreach (var item in Model.tbLine)
                        {

                            <option value="@item.LineName" selected="@(item.LineName == ViewBag.SelectedLineName ? "selected" : null)">
                                @Html.DisplayFor(modelItem => item.LineID) :  @Html.DisplayFor(modelItem => item.LineName) </option>
                        }
                    </select>
                </div>

            </div>
            <div class="row" style="height:10px"></div>

            <div class="row" style=" padding-right:2em">
                <div class="col-3 label">
                    <label> Employee ID:</label>
                </div>
                <div class="col">
                    <select class="selectfillter form-control" list="EmployeeID" name="EmployeeID" id="EmployeeID" style="width:100%">
                        <option value="" default selected></option>
                        @foreach (var item in Model.tbEmployeeMaster)
                        {

                            <option value="@item.EmployeeID" selected="@(item.EmployeeName == ViewBag.SelectedEmpID ? "selected" : null)">
                                @Html.DisplayFor(modelItem => item.EmployeeID) :  @Html.DisplayFor(modelItem => item.EmployeeName) </option>
                        }
                    </select>
                </div>

            </div>

                  <div class="row" style="height:10px"></div>
             <div class="row" style="padding-right:2em">
                <div class="col-3 label">
                    <label>  Section Name:</label>
                </div>
                <div class="col">
                    <!-- Line Name -->
                    <div class="mb-3">
                        <select class="selectfillter form-control" list="SectionName" name="SectionName" id="SectionName" style="width:100%">
                            <option value="" default selected></option>
                            @foreach (var item in Model.tbSection)
                            {

                                <option value="@item.SectionID" selected="@(item.SectionName == ViewBag.SelectedSectionName ? "selected" : null)">
                                    @Html.DisplayFor(modelItem => item.SectionName) :  @Html.DisplayFor(modelItem => item.SectionName)
                                </option>
                            }
                        </select>

                       
                    </div>

                </div>


            </div>

            <div class="row" style="height:10px"></div>



        </div>


        @*Services Clock - Out  Process*@
        <div class="col right" style="border: solid 1px #d5d5d5; margin-left: 2em ">

            <div class="row" style="height:10px">
            </div>

            <div class="row" style="padding-right:2em">
                <div class="col-3 label">
                    <label for="recipient-name" class="col-form-label">Clock Out Time:</label>
                </div>
                <div class="col">
                    <!-- Clock-In -->
                    <input type="time" class="form-control" name="ClockOut" id="ClockOut" step="60" style="width:100%">
                </div>
                <div class="col-1"></div>
            </div>


            <div class="row" style="padding-right:2em">
                <div class="col-3 label">
                    <label for="recipient-name" class="col-form-label">Clock Out Date:</label>
                </div>
                <div class="col">
                    <!-- Transaction Date -->
                 @*    <input type="date" class="form-control" name="TransactionDate" id="TransactionDate" value="@DateTime.Now.Date"> *@
                    <input type="date" class="form-control" name="TransactionDate" id="TransactionDate" style="width:100%" >

                </div>
                <div class="col-1"></div>
            </div>
            <div class="row" style="padding-right:2em">
                <div class="col-3 label">
                    <label for="recipient-name" class="col-form-label">Status:</label>
                </div>
                <div class="col">
                    <select class="selectfillter form-control" name="WorkingStatus" id="Workingstatus" style="width:100%">
                        <option value="" default selected></option>
                        <option value="Rotate"> Rotate</option>
                        <option value="Leave"> Leave</option>
                    </select>
                </div>
                <div class="col-1"></div>
            </div>
            <div class="row" style="height:20px"></div>

        </div>

    </div>


    <div class="row">
        <div class="col-6">
            <div class="row" style="height:40px ;">
                <div class="col-6"></div>
                <div class="col-3">
                    <button class="clear-button" type="submit" asp-action="ServicesClockOutClear">
                        Clear
                    </button>
                </div>

                <div class="col-3">
                    <button class="search-button" type="submit" asp-action="ServicesClockOut">
                        Search
